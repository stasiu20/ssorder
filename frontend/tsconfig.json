{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.(c|sa|sc)ss\\?module$"
        }
      }
    ],
    "lib": [
      "es6",
      "webworker",
      "dom"
    ]
  },
  "include": [
    "webpack/js/**/*"
  ],
  "exclude": [
    "webpack/js/**/*.spec.ts",
    "webpack/js/**/*.spec.tsx",
    "node_modules/"
  ]
}
